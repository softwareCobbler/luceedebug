{
  "name": "luceedebug",
  "publisher": "DavidRogers",
  "version": "2.0.12",
  "description": "VS Code client for luceedebug backend.",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build-dev-windows": "npx tsc && node \"node_modules/esbuild/bin/esbuild\" ./src/extension.ts --bundle --sourcemap --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js",
    "build-dev-linux": "npx tsc && ./node_modules/esbuild/bin/esbuild        ./src/extension.ts --bundle --sourcemap --tsconfig=./tsconfig.json --external:vscode --format=cjs --platform=node --outfile=dist/extension.js"
  },
  "keywords": [
    "ColdFusion",
    "debug",
    "debugger",
    "Lucee"
  ],
  "author": "David Rogers",
  "license": "ISC",
  "main": "./dist/extension.js",
  "activationEvents": [
    "onDebugResolve:cfml"
  ],
  "categories": [
    "Debuggers"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/softwareCobbler/luceedebug"
  },
  "engines": {
    "vscode": "^1.63.0"
  },
  "contributes": {
    "customEditors": [
      {
        "viewType": "luceedebug.dumpView",
        "displayName": "luceedebug var dump",
        "selector": [
          {
            "filenamePattern": "*.luceedebugdumpview"
          }
        ]
      }
    ],
    "menus": {
      "debug/variables/context": [
        {
          "when": "debugType == 'cfml'",
          "command": "luceedebug.dump"
        },
        {
          "when": "debugType == 'cfml'",
          "command": "luceedebug.dumpAsJSON"
        },
        {
          "when": "debugType == 'cfml'",
          "command": "luceedebug.openFileForVariableSourcePath"
        }
      ]
    },
    "languages": [
      {
        "id": "cfml",
        "extensions": [
          ".cfm",
          ".cfc",
          ".cfml",
          ".cfs"
        ],
        "aliases": [
          "ColdFusion",
          "CFML"
        ],
        "filenames": []
      }
    ],
    "breakpoints": [
      {
        "language": "cfml"
      }
    ],
    "commands": [
      {
        "command": "luceedebug.dump",
        "title": "luceedebug: dump",
        "enablement": "debugType == 'cfml'"
      },
      {
        "command": "luceedebug.dumpAsJSON",
        "title": "luceedebug: dump as JSON",
        "enablement": "debugType == 'cfml'"
      },
      {
        "command": "luceedebug.debugBreakpointBindings",
        "title": "luceedebug: show class and breakpoint info"
      },
      {
        "command": "luceedebug.openFileForVariableSourcePath",
        "title": "luceedebug: open defining file",
        "enablement": "debugType == 'cfml'"
      }
    ],
    "debuggers": [
      {
        "type": "cfml",
        "languages": [
          "cfml"
        ],
        "label": "CFML Debug Adapter",
        "configurationAttributes": {
          "attach": {
            "required": [
              "hostName",
              "port"
            ],
            "properties": {
              "port": {
                "type": "number",
                "description": "Port that has been configured to accept luceedebug connections.",
                "default": 10000
              },
              "hostName": {
                "type": "string",
                "description": "Hostname (i.e. `localhost`) or address, of server on which the target Lucee server is running."
              },
              "pathTransforms": {
                "type": "array",
                "description": "Ordered list of source file path transforms (e.g. if in your IDE, you are editing '/foo/bar/baz.cfc', but the cf engine knows it as '/app/bar/baz.cfc', it needs to be transformed). The first one that matches for a particular need 'wins'. If none match (or the list is empty), no paths are transformed.",
                "items": {
                  "type": "object",
                  "properties": {
                    "idePrefix": {
                      "type": "string",
                      "default": "${workspaceFolder}"
                    },
                    "serverPrefix": {
                      "type": "string",
                      "default": "/container-root/app"
                    }
                  },
                  "required": [
                    "idePrefix",
                    "serverPrefix"
                  ]
                },
                "default": [
                  {
                    "idePrefix": "${workspaceFolder}",
                    "serverPrefix": "/container-root/app"
                  }
                ]
              },
              "pathSeparator": {
                "type": "string",
                "enum": [
                  "none",
                  "auto",
                  "posix",
                  "windows"
                ],
                "default": "auto",
                "description": "How paths returned from the debugger should be normalized (none, auto, posix, or windows)."
              }
            }
          }
        },
        "initialConfigurations": [
          {
            "type": "cfml",
            "request": "attach",
            "name": "Attach to server",
            "hostName": "localhost",
            "pathTransforms": [
              {
                "idePrefix": "${workspaceFolder}",
                "serverPrefix": "/app"
              }
            ],
            "pathSeparator": "auto",
            "port": 8000
          }
        ],
        "configurationSnippets": [
          {
            "label": "luceedebug: Attach",
            "description": "Default configuration to connect to Lucee",
            "body": {
              "type": "cfml",
              "request": "attach",
              "name": "Attach to server",
              "hostName": "localhost",
              "pathTransforms": [
                {
                  "idePrefix": "^\"\\${workspaceFolder}\"",
                  "serverPrefix": "/app"
                }
              ],
              "pathSeparator": "auto",
              "port": 8000
            }
          }
        ],
        "variables": {}
      }
    ]
  },
  "dependencies": {
    "@types/node": "^17.0.0",
    "@types/vscode": "^1.63.1",
    "vscode-debugadapter": "^1.51.0"
  },
  "devDependencies": {
    "esbuild": "^0.14.5",
    "typescript": "^5.9.2"
  },
  "$defs": {
    "foo": {}
  }
}
